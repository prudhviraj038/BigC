<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView18"
            android:src="@drawable/employeebackground"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView19"
                    android:src="@drawable/bigclogo"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView62"
                    android:src="@drawable/bigclogo"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView63"
                    android:src="@drawable/bigclogo"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Of The Question Paper"
                android:id="@+id/textView7"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:layout_marginTop="30dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText12"
                android:layout_gravity="center_horizontal"
                android:hint="Username"
                android:background="@drawable/employee_roundedcorners"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="30dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:divider="@drawable/whitedivider3"
                android:showDividers="middle"
                android:layout_marginTop="30dp"
                android:layout_marginRight="75dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/question"
                    android:textSize="30sp"
                    android:background="#ffffff"
                    android:padding="20dp"
                    android:text="1. What is Latest Version of Android?" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="75dp"
                    android:divider="@drawable/whitedivider3"
                    android:showDividers="middle"
                    android:layout_marginTop="30dp" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView35"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/examreviewrounded_corners"
                            android:padding="20dp"
                            android:textSize="30sp"
                            android:text="A" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ansa"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/examreviewrounded_corners"
                            android:padding="20dp"
                            android:textSize="30sp"
                            android:text="Lollipop"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView38"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/examreviewrounded_corners"
                            android:padding="20dp"
                            android:textSize="30sp"
                            android:text="B" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView44"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/examreviewrounded_corners"
                            android:padding="20dp"
                            android:textSize="30sp"
                            android:layout_marginLeft="60dp"
                            android:text="Jellybeen"
                            android:layout_marginRight="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView45"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/examreviewrounded_corners"
                            android:padding="20dp"
                            android:textSize="30sp"
                            android:text="C" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView46"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/examreviewrounded_corners"
                            android:padding="20dp"
                            android:textSize="30sp"
                            android:layout_marginLeft="60dp"
                            android:text="Marshello"
                            android:layout_marginRight="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView47"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/examreviewrounded_corners"
                            android:padding="20dp"
                            android:textSize="30sp"
                            android:text="D" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView48"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/examreviewrounded_corners"
                            android:padding="20dp"
                            android:textSize="30sp"
                            android:layout_marginLeft="60dp"
                            android:text="Icecream Sandwich"
                            android:layout_marginRight="40dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/next"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/exam_roundedcorners1"
                    android:layout_marginLeft="75dp"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:id="@+id/textView49"
                        android:textColor="#ffffff"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>